{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ post.titulo }}</td>
            </tr>
            <tr>
                <th>DataCriacao</th>
                <td>{{ post.dataCriacao ? post.dataCriacao|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Conteudo</th>
                <td>{{ post.conteudo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
    
    <a href="{{ path('comentario_new', {'post': post.id}) }}">Adicionar um comentario</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
