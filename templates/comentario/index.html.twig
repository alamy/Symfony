{% extends 'base.html.twig' %}

{% block title %}Comentario index{% endblock %}

{% block body %}
    <h1>Comentario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>DataCriacao</th>
                <th>Conteudo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comentario in comentarios %}
            <tr>
                <td>{{ comentario.id }}</td>
                <td>{{ comentario.nome }}</td>
                <td>{{ comentario.dataCriacao ? comentario.dataCriacao|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comentario.conteudo }}</td>
                <td>
                    <a href="{{ path('comentario_show', {'id': comentario.id}) }}">show</a>
                    <a href="{{ path('comentario_edit', {'id': comentario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comentario_new') }}">Create new</a>
{% endblock %}
